@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Вход ";
}

<div class="section section-signup">
	<div class="container">
		<div class="row row-grid justify-content-between align-items-center">
		<div class="col-lg-12 mb-lg-auto">
			<div class="card card-register">
			<div class="card-header">
				<img class="card-img" src="~/images/square1.png" alt="Card image">
				<h4 class="card-title">@ViewData["Title"]</h4>
			</div>
			<div class="card-body">
				<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
					 <div asp-validation-summary="All" class="text-danger"></div>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text">
								<i class="tim-icons icon-email-85"></i>
							</div>
						</div>

						<input asp-for="Email" class="form-control" placeholder="Email" />
						<span asp-validation-for="Email" class="text-danger d-block w-100"></span>
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text">
								<i class="tim-icons icon-lock-circle"></i>
							</div>
						</div>
						<input asp-for="Password" class="form-control" placeholder="Password" />
						<span asp-validation-for="Password" class="text-danger d-block w-100"></span>
					</div>
					
					<div class="form-group">
						<div class="checkbox">
							<label asp-for="RememberMe">
								<input asp-for="RememberMe" />
								@Html.DisplayNameFor(m => m.RememberMe)
							</label>
						</div>
					</div>
					<div class="card-footer d-flex justify-content-start p-0 mt-0 mb-4">
						<button type="submit" class="btn btn-info btn-round btn-lg">Вход</button>
					</div>
					<div class="form-group">
						<p>
							<a asp-action="ForgotPassword">Забравена парола</a>
						</p>
					</div>
					
				</form>
				</div>
			</div>
		</div>
		</div>
	</div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
