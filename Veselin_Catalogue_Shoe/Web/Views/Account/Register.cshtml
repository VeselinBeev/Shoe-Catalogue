@model RegisterViewModel
@{
    ViewData["Title"] = "Регистър";
}
<div class="section section-signup">
	<div class="container">
		<div class="row row-grid justify-content-between align-items-center">
		<div class="col-lg-12 mb-lg-auto">
			<div class="card card-register">
			<div class="card-header">
				<img class="card-img" src="~/images/square1.png" alt="Card image">
				<h4 class="card-title">@ViewData["Title"]</h4>
			</div>
			<div class="card-body">
				<form class="form" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
					<div class="input-group">
						<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="tim-icons icon-email-85"></i>
						</div>
						</div>
						<input asp-for="Email" class="form-control" placeholder="Email" />
						<span asp-validation-for="Email" class="text-danger d-block w-100"></span>
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="tim-icons icon-lock-circle"></i>
						</div>
						</div>
						<input asp-for="Password" class="form-control" placeholder="Password" />
						<span asp-validation-for="Password" class="text-danger d-block w-100"></span>
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
						<div class="input-group-text">
							<i class="tim-icons icon-lock-circle"></i>
						</div>
						</div>
						<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
						<span asp-validation-for="ConfirmPassword" class="text-danger d-block w-100"></span>
					</div>
					<div class="form-check text-left">
						<label class="form-check-label">
						<input class="form-check-input" type="checkbox">
						<span class="form-check-sign"></span>
						Съгласен съм с 
						<a href="javascript:void(0)">условията за ползване</a>.
						</label>
					</div>
					<div class="card-footer d-flex justify-content-end">
						<button type="submit" class="btn btn-info btn-round btn-lg">Регистрирай се сега</button>
					</div>
				</form>
			</div>
			
			</div>
		</div>
		</div>
	</div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
